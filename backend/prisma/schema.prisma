generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  autoSyncEnabled Boolean @default(false)
  accounts          Account[]
  syncJobs          SyncJob[]
  calendarMappings  CalendarMapping[]
  syncLogs          SyncLog[]
}

model Account {
  id           String   @id @default(uuid())
  userId       String
  provider     String   // "google" or "apple"
  providerId   String?  // Google ID or Apple ID email
  accessToken  String?  // Encrypted
  refreshToken String?  // Encrypted
  password     String?  // App-specific password for Apple (Encrypted)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
}

model SyncJob {
  id        String   @id @default(uuid())
  userId    String
  status    String   // "pending", "processing", "completed", "failed"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model EventMapping {
  id             String   @id @default(uuid())
  userId         String
  googleEventId  String?
  appleEventId   String?
  lastSyncedAt   DateTime @default(now())
  
  @@unique([userId, googleEventId])
  @@unique([userId, appleEventId])
}

model CalendarMapping {
  id               String   @id @default(uuid())
  userId           String
  googleCalendarId String?
  appleCalendarUrl String?
  displayName      String
  syncDirection    String   @default("BIDIRECTIONAL") // "BIDIRECTIONAL", "GOOGLE_TO_APPLE", "APPLE_TO_GOOGLE"
  syncEnabled      Boolean  @default(true)
  lastSyncedAt     DateTime @default(now())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id])

  @@unique([userId, appleCalendarUrl])
}

model SyncLog {
  id        String   @id @default(uuid())
  userId    String
  level     String   // "INFO", "SUCCESS", "ERROR", "WARN"
  message   String
  details   String?  // Optional JSON/Text
  source    String   // "MANUAL", "AUTO"
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
